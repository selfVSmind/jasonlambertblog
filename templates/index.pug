doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

      meta(http-equiv='cache-control' content='max-age=0')
      meta(http-equiv='cache-control' content='no-cache, no-store, must-revalidate')
      meta(http-equiv='expires' content='0')
      meta(http-equiv='expires' content='Tue, 01 Jan 1980 1:00:00 GMT')
      meta(http-equiv='pragma' content='no-cache')

      meta(name="theme-color" content="#2d132c")
      meta(name="msapplication-navbutton-color" content="#2d132c")
      meta(name="apple-mobile-web-app-capable" content="yes")
      meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")

      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Quattrocento+Sans')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Limelight')
      link(rel='stylesheet', href=contents.css['splash.css'].url)
      script(type='text/javascript', src=contents.js['splash.js'].url)
  body(class=bodyclass)





    header
        div.header-background
        a(href=locals.url)
            img(id="logo", src="/images/jasonlambertjsonlogo.svg", alt="Jason Lambert")
            h1 Software Engineer

    div.section-title
        p Projects
    div.projects
        div(onMouseEnter="animateHoverOn(this)" onMouseLeave="animateHoverOff(this)")
            <h1><i class="fas fa-tshirt animate__animated animate__repeat-2 animate__swing icon-color" aria-hidden="true"></i> Custom Ebay Lister</h1>
            hr
            div.project-image
                a(href=locals.tShirt)
                    img(id="tshirt-logo", class="animate__animated animate__zoomInDown", src="/images/jasons-tees-logo.png", alt="Project Image", title="Project Image")

            div.project-specs
                p Language
                    ul
                        li
                            strong Javascript
                p Technology
                ul
                    <li><strong>NodeJS</strong>.</li>
                    <li><strong>Angular</strong> for the frontend.</li>
                    <li><strong>Express</strong> server for the backend.</li>
                    <li><strong>ImageMagick</strong> is used server side.</li>
                    <li><strong>Ebay API</strong> used to create listings.</li>
                    <li><strong>Contentful</strong> used as a database.</li>

                p Links
                .button-group
                    a(href=locals.tShirtBackendSource)
                        .button
                            strong Backend Source
                    a(href=locals.tShirtFrontendSource)
                        .button
                            strong Frontend Source
                    a(href=locals.tShirt)
                        .button
                            strong Live

        div(onMouseEnter="animateHoverOn(this)" onMouseLeave="animateHoverOff(this)")
            <h1><i class="fa fa-gamepad animate__animated animate__repeat-2 animate__tada icon-color" aria-hidden="true"></i> Image Converter</h1>
            hr
            div.project-specs
                p Language
                    ul
                        li
                            strong C++
                p Technology Used
                    ul
                        <li><strong>LibPNG</strong></li>
                        <li><strong>GNU</strong> compiler</li>
                        <li><strong>Makefile</strong></li>
                p Links
                .button-group
                    a(href=locals.png2cSource)
                        .button
                            strong Source
                    a(href="http://localhost:8080/articles/png2c-example-rom/")
                        .button
                            strong Related Blog Post
        div(onMouseEnter="animateHoverOn(this)" onMouseLeave="animateHoverOff(this)")
            <h1><i class="fas fa-blog animate__animated animate__repeat-2 animate__rubberBand icon-color" aria-hidden="true"></i> My Blog</h1>
            hr
            .project-image
                a(href=locals.blog)
                    img(id="blog-logo", src="/images/blog-logo.svg", alt="Project Image", title="Project Image")
            .project-specs
                p Language
                    ul
                        li
                            strong Javascript
                p Stack
                ul
                    <li>Static website built with <strong>NodeJS</strong>.</li>
                
                p Links
                .button-group
                    a(href=locals.blogSource)
                        .button
                            strong Source
                    a(href=locals.blog)
                        .button
                            strong Live


    .section-title
        p Socials

    .socials    
        .social-icon
            a(href=locals.github)
                img(src="https://raw.githubusercontent.com/simple-icons/simple-icons/develop/icons/github.svg")
        .social-icon.social-icon-square
            a(href=locals.linkedIn)
                img(src="/images/icons/linked-in-logo.svg" style="")
        .social-icon
            a(href="mailto:jason@jasonlambert.io")
                img(src="/images/icons/email.svg")









    footer
        section.about
        !=contents['about.md'].html
        section.copy
        p &copy; #{ new Date().getFullYear() } #{ locals.owner }
