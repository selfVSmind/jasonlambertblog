doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

      meta(http-equiv='cache-control' content='max-age=0')
      meta(http-equiv='cache-control' content='no-cache, no-store, must-revalidate')
      meta(http-equiv='expires' content='0')
      meta(http-equiv='expires' content='Tue, 01 Jan 1980 1:00:00 GMT')
      meta(http-equiv='pragma' content='no-cache')

      meta(name="theme-color" content="#2d132c")
      meta(name="msapplication-navbutton-color" content="#2d132c")
      meta(name="apple-mobile-web-app-capable" content="yes")
      meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")

      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')

      //- Fonts
      link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Roboto:wght@300&family=Signika:wght@300&display=swap')

      //- My Stuffs
      script(type='text/javascript', src=contents.js['splash.js'].url)
      link(rel='stylesheet', href=contents.css['splash.css'].url)

  body(class=bodyclass)
    header.header
      div.header-background
      a(href=locals.url)
          img(id="logo", src="/images/jasonlambertjsonlogo.svg", alt="Jason Lambert")
          h1 Software Engineer
    block header
      div.logo
    div#content
      block content
        //- This is where the .pug files take over and add the actual page content
    footer
      .socials    
        .social-icon
            a(href=locals.github)
                img(src="/images/icons/github-logo.svg" title="Github")
        .social-icon.social-icon-square
            a(href=locals.linkedIn)
                img(src="/images/icons/linked-in-logo.svg" title="LinkedIn" style="")
        .social-icon
            a(href="mailto:jason@jasonlambert.io" title="Email")
                img(src="/images/icons/email-envelope.svg")

      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
